                    help
                        Peak filter.

                config ESP_AE_EQ_FILTER7_HIGH_SHELF
                    bool "High Shelf"
                    help
                        High Shelf filter.

                config ESP_AE_EQ_FILTER7_LOW_SHELF
                    bool "Low Shelf"
                    help
                        Low Shelf filter.
            endchoice

            config GMF_EQ_FILTER7_TYPE
                int
                default 1 if ESP_AE_EQ_FILTER7_HIGH_PASS
                default 2 if ESP_AE_EQ_FILTER7_LOW_PASS
                default 3 if ESP_AE_EQ_FILTER7_PEAK
                default 4 if ESP_AE_EQ_FILTER7_HIGH_SHELF
                default 5 if ESP_AE_EQ_FILTER7_LOW_SHELF

            config GMF_EQ_FILTER7_FC
                int "Frequency (Hz)"
                default 7000
                help
                    The value should be less than half of the sampling rate.
                    For high shelf, low shelf, and peak filter, it represents the center frequency.
                    For high pass and low pass filter, it represents the cut-off frequency.

            config GMF_EQ_FILTER7_QX1000
                int "Q × 1000 (e.g. 1000 for Q=1.0)"
                range 100 20000
                default 1000
                help
                    Q value of filter. Used to describe the bandwidth of the filter.
                    The higher the Q value, the narrower the bandwidth,
                    the lower the Q value, the wider the bandwidth.


            config GMF_EQ_FILTER7_GAINX10
                int "Gain × 10 (e.g. -30 for -3.0 dB)"
                range -150 150
                default 0
                help
                    Gain value of filter.
                    Only valid for high shelf, low shelf, and peak filter.
        endmenu

