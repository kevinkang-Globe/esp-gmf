    config GMF_AUDIO_EFFECT_INIT_SONIC
        bool "Initialize GMF Audio Effect SONIC"
        default n
        help
            Initialize GMF Audio effect sonic

    config GMF_AUDIO_EFFECT_INIT_FADE
        bool "Initialize GMF Audio Effect FADE"
        default n
        help
            Initialize GMF Audio effect fade

    if GMF_AUDIO_EFFECT_INIT_FADE
        choice GMF_AUDIO_EFFECT_FADE_MODE
            prompt "Fade Mode"
            default GMF_AUDIO_EFFECT_FADE_MODE_FADE_IN
            help
                Select the fade mode

            config GMF_AUDIO_EFFECT_FADE_MODE_FADE_IN
                bool "Fade In"
                help
                    Fade in mode

            config GMF_AUDIO_EFFECT_FADE_MODE_FADE_OUT
                bool "Fade Out"
                help
                    Fade out mode
        endchoice

        config GMF_AUDIO_EFFECT_FADE_MODE
            int
            default 1 if GMF_AUDIO_EFFECT_FADE_MODE_FADE_IN
            default 2 if GMF_AUDIO_EFFECT_FADE_MODE_FADE_OUT

        choice GMF_AUDIO_EFFECT_FADE_CURVE
            prompt "Fade Curve"
            default GMF_AUDIO_EFFECT_FADE_CURVE_LINE
            help
                Select the fade curve type

            config GMF_AUDIO_EFFECT_FADE_CURVE_LINE
                bool "Linear"
                help
                    Linear fade variation curve

            config GMF_AUDIO_EFFECT_FADE_CURVE_QUAD
                bool "Quadratic"
                help
                    Quadratic fade variation curve

            config GMF_AUDIO_EFFECT_FADE_CURVE_SQRT
                bool "Square Root"
                help
                    Square root fade variation curve
        endchoice

        config GMF_AUDIO_EFFECT_FADE_CURVE
            int
            default 1 if GMF_AUDIO_EFFECT_FADE_CURVE_LINE
            default 2 if GMF_AUDIO_EFFECT_FADE_CURVE_QUAD
            default 3 if GMF_AUDIO_EFFECT_FADE_CURVE_SQRT

        config GMF_AUDIO_EFFECT_FADE_TRANSIT_TIME
            int "Fade Transition Time (ms)"
            default 500
            range 0 10000
            help
                The transition time in milliseconds when the weight changes from 0 to 1 in fade-in mode
                and from 1 to 0 in fade-out mode
    endif
endmenu
